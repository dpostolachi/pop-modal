@import 'animations.styl'

.popModal
    display block
    position fixed
    width 100%
    min-height 100%
    max-height 100vh
    line-height 100vh
    top 0px
    left 0px
    z-index 20
    text-align center
    overflow auto
    background rgba(0, 0, 0, .7)
    &.closed
        display none
    &.opening
        animation modalFadeIn 1s
        .popModalContainer
            opacity 0
            display none
    &.closing
        animation modalFadeOut 1s
    &.open
        .popModalContainer
            animation modalConntainerFadeIn 0.5s
    &Close
        display block
        position absolute
        z-index 1
        font-size 3rem
        background none
        padding 0
        border none
        color #fff
        width 3.2rem
        height 3.2rem
        line-height 3.2rem
        top 12px
        right 22px
    &Container
        display inline-block
        vertical-align middle
        line-height 1
        text-align left
        color #fff
        position relative
        position relative
        max-width 100%
