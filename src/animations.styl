@keyframes modalFadeIn {
    from {
        opacity: 0;
    }
    to   {
        opacity: 1;
    }
}
@keyframes modalFadeOut {
    from {
        opacity: 1;
    }
    to   {
        opacity: 0;
    }
}
@keyframes modalConntainerFadeIn {
    from {
        opacity: 0;
        left -100px
    }
    to   {
        opacity: 1;
        left 0px
    }
}
@keyframes modalConntainerFadeOut {
    from {
        opacity: 1;
        left 0px
    }
    to   {
        opacity: 0;
        left 100px
    }
}
