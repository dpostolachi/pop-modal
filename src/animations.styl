@keyframes modalFadeIn {
    from {
        opacity: 0;
    }
    to   {
        opacity: 1;
    }
}
@keyframes modalFadeOut {
    from {
        opacity: 1;
    }
    to   {
        opacity: 0;
    }
}
@keyframes modalConntainerFadeIn {
    from {
        opacity: 0;
        top -100px
    }
    to   {
        opacity: 1;
        top 0px
    }
}
@keyframes modalConntainerFadeOut {
    from {
        opacity: 1;
        top 0px
    }
    to   {
        opacity: 0;
        top 100px
    }
}
